<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.1.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_1_0.dtd">

<service-builder>
	<entity name="FinanceAccount" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="financeAccountId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="financeAccountTypeId" type="long" />
		<column name="financeAccountTypeCode" type="String" />
		<column name="parentFinanceAccountId" type="long" />
		<column name="name" type="String" />
		<column name="description" type="String" />
		<column name="accountStatus" type="boolean" />

		<!-- Order -->

		<order by="asc">
			<order-column name="financeAccountId" />
		</order>

		<!-- Finder methods -->

		<finder name="FinanceAccountType" return-type="Collection">
			<finder-column name="financeAccountTypeId" />
		</finder>
	</entity>
	<entity name="FinanceAccountEntry" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="financeAccountEntryId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="classNameId" type="long" />
		<column name="classPK" type="long" />
		<column name="financeAccountId" type="long" />
		<column name="description" type="String" />
		<column name="originalAmount" type="float" />
		<column name="originalFinanceCurrencyId" type="long" />
		<column name="originalFinanceCurrencyCode" type="String" />
		<column name="finalFixingRate" type="float" />
		<column name="finalAmount" type="float" />
		<column name="finalFinanceCurrencyId" type="long" />
		<column name="finalFinanceCurrencyCode" type="String" />

		<!-- Order -->

		<order by="asc">
			<order-column name="financeAccountEntryId" />
			<order-column name="createDate" />
		</order>

		<!-- Finder methods -->

		<finder name="FinanceAccountId" return-type="Collection">
			<finder-column name="financeAccountId" />
		</finder>
		<finder name="F_C_C" return-type="Collection">
			<finder-column name="financeAccountId" />
			<finder-column name="classNameId" />
			<finder-column name="classPK" />
		</finder>
	</entity>
	<entity name="FinanceAccountType" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="financeAccountTypeId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="code" type="String" />
		<column name="name" type="String" />
		<column name="description" type="String" />

		<!-- Order -->

		<order by="asc">
			<order-column name="name" />
		</order>
	</entity>
	<entity name="FinanceCurrency" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="financeCurrencyId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="code" type="String" />
		<column name="name" type="String" />
		<column name="description" type="String" />

		<!-- Order -->

		<order by="asc">
			<order-column name="name" />
		</order>
	</entity>
</service-builder>