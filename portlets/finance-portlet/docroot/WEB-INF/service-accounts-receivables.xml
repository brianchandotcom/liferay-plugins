<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.1.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_1_0.dtd">

<service-builder>
	<entity name="FinanceCustomer" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="financeCustomerId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="name" type="String" />
		<column name="description" type="String" />

		<!-- Order -->

		<order by="asc">
			<order-column name="name" />
		</order>
	</entity>
	<entity name="FinanceInvoice" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="financeInvoiceId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="financeCustomerId" type="long" />
		<column name="financeSalesRepId" type="long" />
		<column name="subTotal" type="float" />
		<column name="discountTotal" type="float" />
		<column name="total" type="float" />
		<column name="financeCurrencyId" type="long" />
		<column name="financeCurrencyCode" type="String" />
		<column name="fixingRate" type="float" />
		<column name="billingTotal" type="float" />
		<column name="billingFinanceCurrencyId" type="long" />
		<column name="billingFinanceCurrencyCode" type="String" />
		<column name="invoiceStatus" type="int" />
		<column name="description" type="String" />

		<!-- Order -->

		<order by="asc">
			<order-column name="createDate" />
		</order>

		<!-- Finder methods -->

		<finder name="FinanceCustomerId" return-type="Collection">
			<finder-column name="financeCustomerId" />
		</finder>
		<finder name="FinanceSalesRepId" return-type="Collection">
			<finder-column name="financeSalesRepId" />
		</finder>
	</entity>
	<entity name="FinanceInvoiceItem" local-service="true" remote-service="false">

