		<column name="financeInvoiceItemId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="code" type="String" />
		<column name="name" type="String" />
		<column name="unitPrice" type="float" />
		<column name="financeCurrencyId" type="long" />
		<column name="financeCurrencyCode" type="String" />
		<column name="description" type="String" />

		<!-- Order -->

		<order by="asc">
			<order-column name="financeInvoiceItemId" />
		</order>
	</entity>
	<entity name="FinanceInvoiceLineItem" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="financeInvoiceLineItemId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="financeInvoiceId" type="long" />
		<column name="financeInvoiceItemId" type="long" />
		<column name="financeInvoiceItemCode" type="String" />
		<column name="quantity" type="float" />
		<column name="unitPrice" type="float" />
		<column name="amount" type="float" />
		<column name="description" type="String" />

		<!-- Order -->

		<order by="asc">
			<order-column name="financeInvoiceLineItemId" />
			<order-column name="createDate" />
		</order>

		<!-- Finder methods -->

		<finder name="FinanceInvoiceId" return-type="Collection">
			<finder-column name="financeInvoiceId" />
		</finder>
		<finder name="FinanceInvoiceItemId" return-type="Collection">
			<finder-column name="financeInvoiceItemId" />
		</finder>
	</entity>
	<entity name="FinanceSalesRep" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="financeSalesRepId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="name" type="String" />
		<column name="description" type="String" />

		<!-- Order -->

		<order by="asc">
			<order-column name="financeSalesRepId" />
		</order>
	</entity>
</service-builder>
