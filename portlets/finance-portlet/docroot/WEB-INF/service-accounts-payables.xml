<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.1.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_1_0.dtd">

<service-builder>
	<entity name="FinanceBill" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="financeBillId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="financeVendorId" type="long" />
		<column name="dueDate" type="Date" />
		<column name="total" type="float" />
		<column name="financeCurrencyId" type="long" />
		<column name="financeCurrencyCode" type="String" />
		<column name="billStatus" type="int" />
		<column name="description" type="String" />

		<!-- Order -->

		<order by="asc">
			<order-column name="createDate" />
		</order>
	</entity>
	<entity name="FinanceBillLineItem" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="financeBillLineItemId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="financeAccountId" type="long" />
		<column name="financeBillId" type="long" />
		<column name="amount" type="float" />
		<column name="description" type="String" />

		<!-- Order -->

		<order by="asc">
			<order-column name="financeBillLineItemId" />
			<order-column name="createDate" />
		</order>

		<!-- Finder methods -->

		<finder name="financeBillId" return-type="Collection">
			<finder-column name="financeBillId" />
		</finder>
	</entity>
	<entity name="FinanceVendor" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="financeVendorId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="name" type="String" />
		<column name="description" type="String" />

		<!-- Order -->

		<order by="asc">
			<order-column name="financeVendorId" />
		</order>
	</entity>
</service-builder>
