<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>1</portlet-name>

		<!-- WebRTC presence timer -->
		<scheduler-entry>
			<scheduler-event-listener-class>com.liferay.chat.video.scheduler.WebRtcPresenceScheduler</scheduler-event-listener-class>
			<trigger>
				<simple>
					<simple-trigger-value>10</simple-trigger-value>
					<time-unit>second</time-unit>
				</simple>
			</trigger>
		</scheduler-entry>

		<!-- WebRTC connection state timeout timer -->
		<scheduler-entry>
			<scheduler-event-listener-class>com.liferay.chat.video.scheduler.WebRtcConnectionStateScheduler</scheduler-event-listener-class>
			<trigger>
				<simple>
					<simple-trigger-value>5</simple-trigger-value>
					<time-unit>second</time-unit>
				</simple>
			</trigger>
		</scheduler-entry>

		<poller-processor-class>com.liferay.chat.video.poller.ChatVideoPollerProcessor</poller-processor-class>
		<use-default-template>false</use-default-template>
		<css-class-wrapper>chat-video-portlet</css-class-wrapper>
		<system>true</system>
	</portlet>
</liferay-portlet-app>
