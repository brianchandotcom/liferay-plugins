<?xml version="1.0"?>

<beans
	default-destroy-method="destroy"
	default-init-method="afterPropertiesSet"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
>
	<bean id="com.liferay.mentions.util.MentionsUserFinderUtil" class="com.liferay.mentions.util.MentionsUserFinderUtil">
		<property name="mentionsUserFinder" ref="com.liferay.mentions.util.DefaultMentionsUserFinder" />
	</bean>
	<bean id="com.liferay.mentions.util.DefaultMentionsUserFinder" class="com.liferay.mentions.util.DefaultMentionsUserFinderImpl">
		<property name="userFinder">
			<bean id="com.liferay.mentions.service.persistence.UserFinder" class="com.liferay.mentions.service.persistence.impl.UserFinderImpl" />
		</property>
	</bean>
</beans>