<?xml version="1.0"?>
<!DOCTYPE project>

<project name="@hook.name@-hook" basedir="." default="deploy">
	<property environment="env"/>

	<condition property="project.dir" value="${env.LIFERAY_SDK_HOME}">
		<isset property="env.LIFERAY_SDK_HOME" />
	</condition>

	<property name="project.dir" value="../.." />

	<fail>
		<condition>
			<not>
				<available file="${project.dir}/hooks/build-common-hook.xml" />
			</not>
		</condition>
.

Please set the environment variable LIFERAY_SDK_HOME.
	</fail>

	<import file="${project.dir}/hooks/build-common-hook.xml" />
</project>