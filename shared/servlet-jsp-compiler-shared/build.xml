<?xml version="1.0"?>

<project name="servlet-jsp-compiler-shared" basedir="." default="compile">
	<property name="plugin.version" value="1" />

	<import file="../../build-common-osgi-plugin.xml" />

	<property name="original.lib.name" value="org.apache.jasper.glassfish" />
	<property name="original.lib.url" value="http://search.maven.org/remotecontent?filepath=org/eclipse/jetty/orbit/" />
	<property name="original.lib.version" value="2.1.0.v201110031002" />

	<property name="validation.resources.folder" value="src/javax/servlet/jsp/resources" />
	<property name="validation.resources.url" value="http://svn.apache.org/repos/asf/tomcat/trunk/java/javax/servlet/jsp/resources/" />

	<target name="compile">
		<if>
			<not>
				<available file="lib/${original.lib.name}.jar" />
			</not>
			<then>
				<mkdir dir="lib" />

				<get
					dest="lib/${original.lib.name}.jar"
					src="${original.lib.url}${original.lib.name}/${original.lib.version}/${original.lib.name}-${original.lib.version}.jar"
				/>

				<get
					dest="lib/${original.lib.name}-sources.jar"
					src="${original.lib.url}${original.lib.name}/${original.lib.version}/${original.lib.name}-${original.lib.version}-sources.jar"
				/>

				<unjar
					dest="src"
					src="lib/${original.lib.name}-sources.jar"
				>
					<patternset>
						<include name="org/apache/jasper/EmbeddedServletOptions.java" />
						<include name="org/apache/jasper/JspC.java" />
						<include name="org/apache/jasper/Options.java" />
						<include name="org/apache/jasper/compiler/Compiler.java" />
						<include name="org/apache/jasper/compiler/Generator.java" />
						<include name="org/apache/jasper/compiler/Jsr199JavaCompiler.java" />
						<include name="org/apache/jasper/compiler/JspRuntimeContext.java" />
						<include name="org/apache/jasper/compiler/TldLocationsCache.java" />
						<include name="org/apache/jasper/runtime/PageContextImpl.java" />
					</patternset>
				</unjar>

				<delete file="lib/${original.lib.name}-sources.jar" />

				<patch dir="src" patchfile="patches/LPS-35513.patch" strip="1" />
			</then>
		</if>

		<if>
			<not>
				<available file="${validation.resources.folder}" />
			</not>
			<then>
				<antcall target="update-validation-schemas" />
			</then>
		</if>

		<antcall target="build-common-osgi-plugin.compile" />
	</target>

	<target name="update-validation-schemas">
		<mkdir dir="${validation.resources.folder}" />

		<get
			dest="${validation.resources.folder}/jsp_2_0.xsd"
			src="${validation.resources.url}/jsp_2_0.xsd"
		/>

		<get
			dest="${validation.resources.folder}/jsp_2_1.xsd"
			src="${validation.resources.url}/jsp_2_1.xsd"
		/>

		<get
			dest="${validation.resources.folder}/jsp_2_2.xsd"
			src="${validation.resources.url}/jsp_2_2.xsd"
		/>

		<get
			dest="${validation.resources.folder}/jsp_2_3.xsd"
			src="${validation.resources.url}/jsp_2_3.xsd"
		/>

		<get
			dest="${validation.resources.folder}/jspxml.dtd"
			src="${validation.resources.url}/jspxml.dtd"
		/>

		<get
			dest="${validation.resources.folder}/jspmlx.xsd"
			src="${validation.resources.url}/jspxml.xsd"
		/>

		<get
			dest="${validation.resources.folder}/web-jsptaglibrary_1_1.dtd"
			src="${validation.resources.url}/web-jsptaglibrary_1_1.dtd"
		/>

		<get
			dest="${validation.resources.folder}/web-jsptaglibrary_1_2.dtd"
			src="${validation.resources.url}/web-jsptaglibrary_1_2.dtd"
		/>

		<get
			dest="${validation.resources.folder}/web-jsptaglibrary_2_0.xsd"
			src="${validation.resources.url}/web-jsptaglibrary_2_0.xsd"
		/>

		<get
			dest="${validation.resources.folder}/web-jsptaglibrary_2_1.xsd"
			src="${validation.resources.url}/web-jsptaglibrary_2_1.xsd"
		/>
	</target>
</project>